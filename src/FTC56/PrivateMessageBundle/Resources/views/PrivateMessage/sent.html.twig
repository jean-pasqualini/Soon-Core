{% extends "FTC56PrivateMessageBundle::layout.html.twig" %}

{% block title %}Messages privés{% endblock %}

{% block pm %}
		<h1 class="page-header">Messages envoyés</h1>
		{% if messages|length > 0 %}
			<table class="table table-striped text-center">
				<thead>
					<tr>
						<td>Sujet</td>
						<td>Destinataire</td>
						<td>Date</td>
					</tr>
				</thead>
				<tbody>
				{% for message in messages %}
					<tr {% if message.seen == false %}class="success"{% endif %}>
						<td class="text-left"><a href="{{ path('pm_view', {'id': message.id}) }}">{{ message.subject }}</a></td>
						<td><a href="{{ path('user_view', {'name': message.receiver}) }}">{{  message.receiver }}</a></td>
						<td>{{  message.date|date('d/m/Y \\à H:i:s') }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		{% else %}
			<div class="alert alert-info">Vous n'avez envoyé aucun message.</div>
		{% endif %}
{% endblock %}
